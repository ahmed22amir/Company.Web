@model IEnumerable<ApplicationUser>

    <h1>All Users </h1>
    <br />

    <br />
<form class="my-3" asp-action="Index" asp-controller="User">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Email" name="searchInp" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>
    </div>
</form>
@if(Model?.Count()>3)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(M=> M.Id)</th>
                <th>@Html.DisplayNameFor(M => M.UserName)</th>
                <th>@Html.DisplayNameFor(M => M.Email)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@Html.DisplayFor(M => item.Id)</th>
                    <th>@Html.DisplayFor(M => item.UserName)</th>
                    <th>@Html.DisplayFor(M => item.Email)</th>
                    <partial name="_ActionButtonsPatialView" model="item.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>No Users Found!</h4>
    </div>
}

